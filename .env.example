# InConnect Environment Configuration
# 复制此文件为 .env 并填入实际配置值

# =====================================================
# 应用配置
# =====================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
SECRET_KEY=change-this-to-a-random-secret-key
ALLOWED_HOSTS=localhost,127.0.0.1

# =====================================================
# 数据库配置
# =====================================================
DATABASE_URL=postgresql://inconnect:inconnect123@localhost:5432/inconnect
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# =====================================================
# Redis 配置
# =====================================================
REDIS_URL=redis://:redis123@localhost:6379/0
REDIS_CACHE_TTL=3600

# =====================================================
# RabbitMQ 配置
# =====================================================
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=inconnect
RABBITMQ_QUEUE_INBOUND=inbound_messages
RABBITMQ_QUEUE_OUTBOUND=outbound_messages

# =====================================================
# Elasticsearch 配置
# =====================================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=inconnect

# =====================================================
# MinIO 对象存储配置
# =====================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET_UPLOADS=inconnect-uploads
MINIO_BUCKET_MEDIA=inconnect-media
MINIO_BUCKET_LOGS=inconnect-logs

# =====================================================
# API 配置
# =====================================================
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
API_RATE_LIMIT=1000

# =====================================================
# 微信公众号配置
# =====================================================
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret
WECHAT_TOKEN=your_wechat_token
WECHAT_ENCODING_AES_KEY=your_encoding_aes_key

# =====================================================
# 企业微信配置
# =====================================================
WEWORK_CORP_ID=your_wework_corp_id
WEWORK_AGENT_ID=your_wework_agent_id
WEWORK_SECRET=your_wework_secret
WEWORK_CONTACT_SECRET=your_wework_contact_secret

# =====================================================
# OTA 平台配置 - 携程
# =====================================================
CTRIP_API_KEY=your_ctrip_api_key
CTRIP_API_SECRET=your_ctrip_api_secret
CTRIP_HOTEL_ID=your_ctrip_hotel_id

# =====================================================
# OTA 平台配置 - 美团
# =====================================================
MEITUAN_API_KEY=your_meituan_api_key
MEITUAN_API_SECRET=your_meituan_api_secret
MEITUAN_HOTEL_ID=your_meituan_hotel_id

# =====================================================
# OTA 平台配置 - 飞猪
# =====================================================
FLIGGY_APP_KEY=your_fliggy_app_key
FLIGGY_APP_SECRET=your_fliggy_app_secret
FLIGGY_HOTEL_ID=your_fliggy_hotel_id

# =====================================================
# NLP 服务配置 - 科大讯飞
# =====================================================
IFLYTEK_APP_ID=your_iflytek_app_id
IFLYTEK_API_KEY=your_iflytek_api_key
IFLYTEK_API_SECRET=your_iflytek_api_secret
IFLYTEK_APP_ID_URL=https://iat-api.xfyun.cn/v2/iat

# =====================================================
# 短信服务配置 - 阿里云
# =====================================================
ALIYUN_SMS_ACCESS_KEY=your_aliyun_access_key
ALIYUN_SMS_ACCESS_SECRET=your_aliyun_access_secret
ALIYUN_SMS_SIGN_NAME=your_sms_sign_name
ALIYUN_SMS_TEMPLATE_CODE=your_template_code

# =====================================================
# JWT 认证配置
# =====================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =====================================================
# 前端配置
# =====================================================
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_WS_BASE_URL=ws://localhost:8000/ws
VITE_APP_TITLE=InConnect 迎客通
